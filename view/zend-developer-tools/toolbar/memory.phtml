<div class="zdt-toolbar-entry">
    <div class="zdt-toolbar-preview">
        <img src="data:image/jpeg;base64," alt="Memory Peak">
        <span class="zdt-toolbar-info">
            <?php echo $this->ZendDeveloperToolsMemory($this->collector->getMemory()); ?>
        </span>
    </div>
    <div class="zdt-toolbar-detail<?php echo ($this->collector->hasEventMemory()) ? ' zdt-toolbar-detail-overflow' : ' zdt-toolbar-detail-redundant' ;?>">
        <?php
        if ($this->collector->hasEventMemory()) {
            foreach ($this->collector->getApplicationEventMemory() as $key => $value) {
                echo '<span class="zdt-toolbar-info">';
                printf('<span class="zdt-detail-label">%d. %s</span>', ($key + 1), $value['name']);
                echo '<span class="zdt-detail-value zdt-detail-value-right">';
                echo $this->ZendDeveloperToolsMemory($value['difference']);
                echo '</span>';
                printf('<p class="zdt-detail-context">%s - Line: %s</p>', $value['file'], $value['line']);
                echo '</span>';
            }
        }
        ?>
        <span class="zdt-toolbar-info zdt-toolbar-info-redundant<?php echo ($this->collector->hasEventMemory()) ? ' zdt-toolbar-topspacing' : '' ;?>">
            <span class="zdt-detail-label">Memory Peak</span>
            <span class="zdt-detail-value zdt-detail-value-right">
                <?php echo $this->ZendDeveloperToolsMemory($this->collector->getMemory()); ?>
            </span>
        </span>
    </div>
</div>